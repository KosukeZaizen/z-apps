{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "lib": ["es6", "dom", "es2015.promise", "es2019"],
        "allowJs": true,
        "checkJs": true,
        "jsx": "preserve",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": ["src"]
}
